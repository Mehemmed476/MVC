@model List<TeamMember>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"><span style="font-size: 2em; ">Team Members </span> <span class="float-right"><a type="button" class="btn btn-success" asp-area="Admin" asp-controller="TeamMember" asp-action="CreateTeamMember">Create TeamMember</a></span>  <span class="float-right"><a type="button" class="btn btn-warning mr-3" asp-area="Admin" asp-controller="TeamMember" asp-action="SoftDeletedTeamMembers">Trash <i class="fa-solid fa-trash"></i></a></span></h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Profession</th>
                    <th>CreatedDate</th>
                    <th>ModifiedDate</th>
                    <th>Image</th>
                    <th>Configures</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Profession</th>
                    <th>Image</th>
                    <th>Configures</th>
                </tr>
                </tfoot>
                <tbody>
                @foreach (TeamMember item in Model)
                {
                    <tr>
                        <td>@item.Id <a type="button" class="btn btn-secondary" style="position: relative; top: 18px; left: 15px;"asp-area="Admin" asp-action="Details" asp-controller="TeamMember" asp-route-Id="@item.Id"><i class="fa-solid fa-circle-info"></i></a></td>
                        <td>@item.Name</td>
                        <td>@item.Profession</td>
                        <td><img src="~/img/@item.ImageUrl" style="width: 50px"></td>
                        <td><a type="button" class="btn btn-primary mt-2 ml-5 mr-3" asp-area="Admin" asp-action="EditTeamMember" asp-controller="TeamMember" asp-route-Id="@item.Id"><i class="fa-solid fa-pen-to-square"></i></a> <a type="button" class="btn btn-warning mt-2 mr-3" asp-area="Admin" asp-action="SoftDeleteTeamMember" asp-controller="TeamMember" asp-route-Id="@item.Id"><i class="fa-sharp fa-solid fa-trash"></i></a> <a type="button" class="btn btn-danger mt-2" asp-area="Admin" asp-action="DeleteTeamMember" asp-controller="TeamMember" asp-route-Id="@item.Id"><i class="fa-solid fa-delete-left"></i></a></td>
                    </tr> 
                }
                
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- /.container-fluid -->