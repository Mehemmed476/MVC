@model List<Work>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Work <span class="float-right"><a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Work" asp-action="Index">Active Works</a></span></h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>CreatedDate</th>
                    <th>DeletedDate</th>
                    <th>Image</th>
                    <th>Configures</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>CreatedDate</th>
                    <th>DeletedDate</th>
                    <th>Image</th>
                    <th>Configures</th>
                </tr>
                </tfoot>
                <tbody>
                @foreach (Work item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.DeletedDate</td>
                        <td><img src="~/img/@item.MainImageUrl" style="width: 50px"></td>
                        <td><a type="button" class="btn btn-light mt-2 ml-5 mr-3" asp-area="Admin" asp-action="RestoreWork" asp-controller="Work" asp-route-Id="@item.Id"><i class="fa-solid fa-rotate-left"></i></a> <a type="button" class="btn btn-danger mt-2" asp-area="Admin" asp-action="DeleteWork" asp-controller="Work" asp-route-Id="@item.Id"><i class="fa-solid fa-delete-left"></i></a></td>
                    </tr> 
                }
                
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- /.container-fluid -->