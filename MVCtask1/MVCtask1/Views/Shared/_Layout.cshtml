                        <a class="nav-link active text-light" aria-current="page" href="@Url.Action("Index","Group")">Group</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="@Url.Action("Index", "Teacher")">Teacher</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="@Url.Action("Index", "Student")">Student</a>
